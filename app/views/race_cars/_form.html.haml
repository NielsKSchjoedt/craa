= simple_form_for @race_car, :html => { :multipart => true } do |f|
  - if @race_car.errors.any?
    #error_explanation
      %h2= "#{pluralize(@race_car.errors.count, "error")} prohibited this race_car from being saved:"
      %ul
        - @race_car.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.input :start_no, label: "Start nr."
  .field
    = f.input :class_type, label: "Kører i klasse"
  .field
    = f.input :make, label: "Mærke"
  .field
    = f.input :model, label: "Model/variant"
  .field
    = f.input :year, label: "Årgang"
  .field
    = f.input :ccm, label: "Motorstørrelse (CCM)"
  .field
    = f.input :hp, label: "Hestekræfter"
  .field
    = f.input :description, label: "Beskrivelse af bilen"
  .field
    = f.input :picture, :required => false, :as => :file, label: "Billede"
  .actions
    = f.submit 'Save'
